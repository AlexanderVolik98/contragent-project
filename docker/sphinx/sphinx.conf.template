# /etc/sphinxsearch/sphinx.conf
# источник из PostgreSQL
source company_src
{
    type            = pgsql
    sql_host        = postgres
    sql_port        = 5432
    sql_user        = ${POSTGRES_USER}
    sql_pass        = ${POSTGRES_PASSWORD}
    sql_db          = ${POSTGRES_DB}

sql_query = \
  SELECT c.id, c.name, c.inn, c.ogrn, c.kpp, c.phones, c.emails, c.slug, \
         cc.value AS capital_value, \
         'Company' AS entity_type, \
         ss.status AS state_status, \
	 TO_CHAR(ss.registration_date, 'YYYYMMDD')::BIGINT AS registration_date_int, \
         r.name AS region_name, \
         o.code AS okved_code, \
	 opf.abbreviation as opf_abbreviation, \
         o.name AS okved_name, \
	          CASE ss.status \
           WHEN 'ACTIVE' THEN 1 \
           WHEN 'REORGANIZING' THEN 2 \
           WHEN 'LIQUIDATING' THEN 3 \
           WHEN 'LIQUIDATED' THEN 4 \
           WHEN 'BANKRUPT' THEN 5 \
           ELSE 6 \
         END AS state_status_order \
  FROM company c \
  LEFT JOIN company_capital cc ON cc.company_id = c.id \
  LEFT JOIN subject_state ss ON ss.company_id = c.id \
  LEFT JOIN subject_address sa ON sa.company_id = c.id \
  LEFT JOIN opf ON opf.id = c.opf_id \
  LEFT JOIN region r ON r.id = sa.region_id \
  LEFT JOIN subject_okved sok ON sok.company_id = c.id AND sok.is_primary = true \
  LEFT JOIN okved o ON o.code = sok.okved_id \


sql_attr_bigint = id
sql_attr_string = region_name
sql_attr_string = slug
sql_attr_string = phones
sql_attr_string = okved_name
sql_attr_string = emails
sql_attr_string = opf_abbreviation
sql_attr_string = state_status
sql_attr_string = entity_type
sql_attr_bigint = capital_value
sql_attr_uint = state_status_order
sql_attr_bigint = registration_date_int

sql_field_string = name
sql_field_string = inn
sql_field_string = ogrn
sql_field_string = kpp
}

# plain-index: указываем source и path для хранения .idx/.spd
index company_idx
{
    source          = company_src
    path            = /var/lib/sphinx/company_idx
    morphology      = stem_ru,stem_en
    min_word_len    = 3

    docinfo      = extern
    charset_type    = utf-8
    charset_table = 0..9, A..Z->a..z, _, a..z, U+410..U+42F->U+430..U+44F, U+430..U+44F, U+401->U+0435, U+451->U+0435, U+0419, U+0439
    min_prefix_len    = 3
    #min_infix_len     = 1
    html_strip       = 1
    ignore_chars    = ',/,\,+,-,.
    #index_exact_words    = 1
    expand_keywords    = 1
    enable_star      = 1
}

# источник для Individual
source individual_src
{
    type            = pgsql
    sql_host        = postgres
    sql_port        = 5432
    sql_user        = ${POSTGRES_USER}
    sql_pass        = ${POSTGRES_PASSWORD}
    sql_db          = ${POSTGRES_DB}

sql_query = \
  SELECT i.id, \
         (i.surname || ' ' || i.name || COALESCE(' '||i.patronymic, '')) AS name, \
         i.inn, \
         i.ogrnip, \
         i.phones, \
         'Individual' AS entity_type, \
         i.emails, \
	 CASE ss.status \
           WHEN 'ACTIVE' THEN 1 \
           WHEN 'LIQUIDATED' THEN 2 \
           ELSE 3 \
         END AS state_status_order, \
         i.slug, \
         ss.status AS state_status, \
         TO_CHAR(ss.registration_date, 'YYYYMMDD')::BIGINT AS registration_date_int, \
         r.name AS region_name, \
	 '' AS ogrn,\
'' AS kpp,\
'' AS opf_abbreviation,\
         o.code AS okved_code, \
         o.name AS okved_name \
  FROM individual i \
  LEFT JOIN subject_state    ss ON ss.individual_id    = i.id \
  LEFT JOIN subject_address  sa ON sa.individual_id    = i.id \
  LEFT JOIN region           r  ON r.id             = sa.region_id \
  LEFT JOIN subject_okved sok ON sok.individual_id = i.id AND sok.is_primary = true \
  LEFT JOIN okved o ON o.code = sok.okved_id \


    # атрибуты для WHERE / фильтров / сортировки
    sql_attr_bigint    = id
    sql_attr_string    = region_name
    sql_attr_string    = slug
    sql_attr_string    = okved_name
    sql_attr_string    = phones
    sql_attr_string    = emails
    sql_attr_uint      = state_status_order
    sql_attr_string    = state_status
    sql_attr_string    = entity_type
    sql_attr_bigint = registration_date_int
    sql_attr_string = ogrn
    sql_attr_string = kpp
    sql_attr_string = opf_abbreviation

    # поля для полнотекстового MATCH
    sql_field_string   = name
    sql_field_string   = inn
    sql_field_string   = ogrnip
}

# plain-index для физических лиц
index individual_idx
{
    source          = individual_src
    path            = /var/lib/sphinx/individual_idx
    morphology      = stem_ru,stem_en
    min_word_len    = 3

    docinfo         = extern
    charset_type    = utf-8
    # (твоя таблица charset_table)
    charset_table   = 0..9, A..Z->a..z, _, a..z, U+410..U+42F->U+430..U+44F, \
                      U+430..U+44F, U+401->U+0435, U+451->U+0435, U+0419, U+0439
    min_prefix_len  = 3
    html_strip      = 1
    ignore_chars    = ',/,\,+,-,.
    expand_keywords = 1
    enable_star     = 1
}

index all_entities
{
    type            = distributed
    local           = company_idx
    local           = individual_idx
}

searchd
{
    # SphinxQL (mysql41) и HTTP
    listen       = 9312:mysql41
    listen       = 9315
    # логи, binlog, pid-файлы
    log          = /var/lib/sphinx/logs/searchd.log
    query_log    = /var/lib/sphinx/logs/query.log
    binlog_path  = /var/lib/sphinx/binlog
    pid_file     = /var/lib/sphinx/logs/searchd.pid

    read_timeout    = 5
    max_children    = 30
    seamless_rotate = 1
    preopen_indexes = 1
    unlink_old      = 1
    workers         = threads
    max_matches = 10000000
}
